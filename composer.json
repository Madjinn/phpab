{
	"name": "phpab/phpab",
	"type": "library",
	"description": "A PHP library to create A/B tests.",
	"keywords": [
		"Phpab",
		"Ab test",
		"abtest"
	],
	"homepage": "https://github.com/phpab/phpab",
	"license": "MIT",
    "authors": [
      {
        "name": "Patrick Heller",
        "email": "paddy.heller@gmail.com",
        "homepage": "https://github.com/psren",
        "role": "Developer"
      }
    ],
	"require": {
		"php": "~5.6|~7.0"
	},
	"autoload": {
		"psr-4": {
			"Phpab\\Phpab\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Phpab\\Phpab\\": "tests"
		}
	},
	"scripts": {
		"test": "phpunit"
	},
	"require-dev": {
		"scrutinizer/ocular": "^1.3",
		"phpunit/phpunit": "^5.2"
	}
}
